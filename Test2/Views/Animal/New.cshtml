@model IEnumerable<ZooApplication.Models.SpeciesDto>

@{
    ViewBag.Title = "Create";
}

<h2>Create Animal</h2>
<form action="/Animal/Create" method="POST">
    <div>
        <label>Name:</label>
        <input name="AnimalName" type="text"/>
    </div>
    <div>
        <label>Weight (kg):</label>
        <input name="AnimalWeight" type="number"/>
    </div>
    <div>
        <label>Species:</label>
        <select name="SpeciesID">
        @foreach(var species in Model)
        {
            <option value="@species.SpeciesID">@species.SpeciesName</option>
        }
        </select>
    </div>
    <div>
        <input type="submit" value="Create Animal"/>
    </div>
</form>

