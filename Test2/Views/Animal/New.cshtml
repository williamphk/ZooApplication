
@{
    ViewBag.Title = "Create";
}

<h2>Create Animal</h2>
<form action="/Animal/Create" method="POST">
    <div>
        <label>Name:</label>
        <input name="AnimalName" type="text"/>
    </div>
    <div>
        <label>Weight (kg):</label>
        <input name="AnimalWeight" type="number"/>
    </div>
    <div>
        <label>Species:</label>
        <input name="SpeciesID" type="number"/>
    </div>
    <div>
        <input type="submit" value="Add Animal"/>
    </div>
</form>

